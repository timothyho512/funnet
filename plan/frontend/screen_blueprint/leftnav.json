      "active_for": [
        "/shop"
      ]
    },
    {
      "id": "sections",
      "label": "Sections",
      "href": "/sections",
      "iconToken": "grid",
      "active_for": [
        "/sections"
      ]
    },
    {
      "id": "profile",
